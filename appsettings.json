{
  "ConnectionStrings": {
    "PostgresConnection": "Server=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD}"
  },
  "SecretKeys": {
    "steamApiKey": "${STEAM_API_KEY}",
    "steamId": "${STEAM_ID}"
  },
  "Steam": {
    "CallbackUrl": "${STEAM_CALLBACK_URL}",
    "RealmUrl": "${STEAM_REALM_URL}"
  },
  "FrontEnd": {
    "CallbackUrl": "${FRONTEND_CALLBACK_URL}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}